<div class="card">
  <div class="card-body">
    <h2 class="card-title d-flex justify-content-between mb-4">
      <span><%= @project.name %></span>
      <div>
        <%= link_to "Edit this project", edit_project_path(@project), class: "btn btn-warning" %>
        <%= button_to "Destroy", @project, method: :delete, class: "btn btn-danger", onClick: "return confirm('Are you sure?')" %>
      </div>
    </h2>
    <h6>Add Task</h6>
      <%= render 'tasks/form' %>
  </div>
</div>


<%= render @project %>

<div>
  <%= link_to "Back to projects", projects_path %>
</div>
<hr>

  <h1>New task</h1>

<hr>

<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th>Project</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @project.tasks.each do |task| %>
  <% if task.persisted? %>
    <tr>
      <td><%= task.name %></td>
      <td><%= task.description %></td>
      <td><%= task.status %></td>
      <td><%= task.project %></td>
      <td><%= link_to 'Show', [task.project, task] %></td>
      <td><%= link_to 'Edit', edit_project_task_path(task.project, task) %></td>
      <td><%= button_to 'Destroy', [task.project, task], method: :delete, onClick: "return confirm('Are you sure?')" %></td>
    </tr>
  <% end %>
<% end %>
</table>

<br />
